@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>Recipes</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Recipe recipe in Model)
    {
      <li class="enlarge">@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId })</li>
    }
  </ul>
}

<p class="enlarge" style="margin-top: 5%">@Html.ActionLink("Add new recipe", "Create")</p>
<p class="enlarge">@Html.ActionLink("Home", "Index", "Home")</p>


