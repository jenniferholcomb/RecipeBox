@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Ingredient

@using (@Html.BeginForm())
{

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)<br>

  @Html.LabelFor(model => model.Quantity)
  @Html.TextBoxFor(model => model.Quantity)<br>

  @Html.LabelFor(model => model.Measurement)
  @Html.TextBoxFor(model => model.Measurement)<br>

  <input type="submit" value="Add ingredient" class="btn btn-default" />
}

<p class="enlarge">@Html.ActionLink("Show all ingredients", "Index")</p>