@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>Ingredients</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No ingredients have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Ingredient ingredient in Model)
    {
      <li class="enlarge">@ingredient.Name</li>
    }
  </ul>
}

<p class="enlarge" style="margin-top: 5%">@Html.ActionLink("Add new ingredient", "Create")</p>
<p class="enlarge">@Html.ActionLink("Home", "Index", "Home")</p>
