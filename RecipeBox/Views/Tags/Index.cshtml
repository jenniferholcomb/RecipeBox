@{
  Layout = "_Layout";
}

<h1>Tags</h1>

@using RecipeBox.Models;

@if(@Model.Count == 0)
{
  <h2>No Tags yet..</h2>
}
else
{
  <ul>
  @foreach(Tag tag in Model)
  {
    <li class="enlarge">@Html.ActionLink($"{tag.Category}", "Details", new { id = tag.TagId})</li>
  }
  </ul>
}


<p style="margin-top: 5%" class="enlarge">@Html.ActionLink("Create Tag", "Create")</p>
<p class="enlarge">@Html.ActionLink("Back to Tags", "Index")</p>
<p class="enlarge">@Html.ActionLink("Home", "Index", "Home")</p>